LDLIBS= -framework GLUT -framework OpenGL -framework Cocoa -Wno-deprecated
CPPFLAGS = -DGL_SILENCE_DEPRECATION

SRCS =	models.c walker.c walkviewer.c
OBJS =	$(SRCS:.c=.o)

walker: $(OBJS) $(GLUT)
	$(CC) -g $(LDLIBS) -o $@ $(OBJS) $(LDFLAGS)

debug: $(OBJS) $(GLUT)
	$(CC) -glldb $(LDLIBS) -o $@ $(OBJS) $(LDFLAGS)

include $(COMMONRULES)
